[user]
	name =
	email =
[filter "lfs"]
	smudge = git-lfs smudge --skip %f
	process = git-lfs filter-process --skip
	required = true
	clean = git-lfs clean -- %f
[filter "gitconf"]
        clean = sh "misc/git_conf_filter.sh"
[core]
	editor = vim
	pager = delta
[interactive]
	diffFilter = delta --color-only
[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
	cp = cherry-pick
	l = log -12 --oneline --decorate --color
	ll = log -6 --decorate --color
	lc = log -6 --graph --color
[push]
	default = current
[pull]
	rebase = true
[diff]
	colorMoved = default
[delta]
	navigate = true
	side-by-side = true
	minus-emph-style = syntax bold "#870000"
	minus-style = syntax "#5f0000"
	plus-emph-style = syntax bold "#008700"
	plus-style= syntax "#005f00"
	file-style = brightwhite brightblack
	file-decoration-style = "#5f87d7" ul
	hunk-header-style = line-number syntax
	hunk-header-line-number-style = brightblack
	hunk-header-decoration-style = "#5f87d7" box
	line-numbers-left-style = "#5f87d7"
	line-numbers-right-style = "#5f87d7"
